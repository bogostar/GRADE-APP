<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Grades Table</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body class="container" style="margin-top: 50px;">
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <H1> <a class="nav-link">Grades Table</a></H1>
                </li>
                <li class="nav-pill ml-auto">
                    <a class="nav-link active" href="/Add">Add course</a><br>
                    <a class="nav-link active" href='/yearfilter'>Filter By Year</a><br>
                    <a class="nav-link active" href='/FilterBySemester'>Filter By Semester</a>
                </li>
            </ul>
        </div>
        <div class=" student-grades ">
            <% if(student_grades.length) { %>
                <table id="table" class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Course name</th>
                            <th>Year</th>
                            <th>Semester</th>
                            <th>Grade</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i< student_grades.length; i++) { %>
                            <tr>
                                <th scope="row ">
                                    <%= (i+1) %>
                                </th>
                                <td>
                                    <%= student_grades[i].course_name%>
                                </td>
                                <td>
                                    <%= student_grades[i].year%>
                                </td>
                                <td>
                                    <%= student_grades[i].semester%>
                                </td>
                                <td>
                                    <%= student_grades[i].grade%>
                                </td>
                                <td>
                                    <a class="btn btn-success edit " href="../edit/<%=student_grades[i].id%>">Edit</a>
                                    <a class="btn btn-danger delete" href="../delete/<%=student_grades[i].id%>">Delete</a>
                                </td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
                <% } %>
        </div>
    </div>
    <!-- <H4>Your total AVG is:</H4> -->
    </h1 id="avg">
    </h1>
    <script>
        let table = document.getElemtById("table"),
            avgVAL, sumVal = 0,
            rowcount = table.rows.length - 1;
        for (var i = 0; i < table.rows.length; i++) {
            sumVal = sumVal + parseInt(table.rows[i].cells[4].innerHTML);
        }
        document.getElemtById("avg").innerHTML = "Your Avarage value is: " + parseInt(sumVal / rowcount);
    </script>
</body>

</html>